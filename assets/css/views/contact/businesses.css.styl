.businesses-page
    background-color black
    overflow hidden

.businesses-panel
    overflow hidden
    width 100vw
    height 100vh
    background-size cover
    background-position 50% 0
    background-repeat no-repeat
    background-attachment scroll

.contact-form
    display block
    width 70vw
    height 70vh
    margin 20vh 15vw 5vh 15vw
    background-color white
    box-shadow 0px 0px 4px gray

.contact-header
    display inline-block
    font-primary-ultra-light-custom(40px)
    line-height 40px
    width 100%
    text-align center
    margin-top 40px
    color black

input.contact-submit
    font-primary-regular-custom(1.1em)
    color #B5B6C0
    display block
    text-align right
    -webkit-appearance none
    width 70%
    margin 16px 15%
    transition 0.5s ease
    -o-transition 0.5s ease
    -webkit-transition 0.5s ease

input.contact-submit
    -moz-box-shadow 0px 0px 5px 0px #ffffff
    -webkit-box-shadow 0px 0px 5px 0px #ffffff
    box-shadow 0px 0px 5px 0px #ffffff
    background-color #ffffff
    border 2px solid #dcdcdc
    display inline-block
    cursor pointer
    font-primary-regular-custom(1.1em)
    color #B5B6C0
    width 160px
    text-align center
    padding 6px 24px
    text-decoration none
    text-shadow 0px 1px 0px #ffffff
    &:hover
        background-color #f6f6f6
    &:active
        position relative
        top 1px

input.contact-input
    font-primary-regular-custom(1.1em)
    color #B5B6C0
    display block
    border-bottom 2px solid rgba(170, 165, 165, 0.32)
    border-left none
    border-right none
    border-top none
    outline none
    text-align left
    -webkit-appearance none
    width 70%
    margin 16px 15%
    transition 0.5s ease
    -o-transition 0.5s ease
    -webkit-transition 0.5s ease

.contact-input:hover
	border-bottom 2px solid #24AAFA
	color #24AAFA

@media screen and (max-width: 662px)
    .businesses-panel
        overflow hidden
        width 100vw
        height 100vh

    .contact-form
        display block
        width 90vw
        height 80vh
        margin 20vh 5vw 0 5vw
        background-color white
        box-shadow 0px 0px 4px gray
