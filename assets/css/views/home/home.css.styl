.home-page
    background-color white
    overflow hidden

.home__panel
    display none
    height 100vh
    width 100%
    background-repeat no-repeat
    background-position center
    background-size cover
    background-color white
    background-position 50% 0
    background-attachment fixed

.home__panel-header
    position relative
    width 100%
    font-primary-regular-custom(44px)
    line-height 44px
    letter-spacing 11px
    text-transform uppercase
    text-align center
    top 35%
    color white
    text-shadow 0px 0px 8px #2E323A

.home__panel-subheader
    position relative
    width 50%
    margin auto 25%
    line-height 23px
    text-align center
    color white
    top 45%
    font-primary-light-custom(20px)
    text-shadow 0px 0px 7px #2E323A

.process__panel
    width 100%
    height 60%
    background-color #D3D2D3
    overflow auto
    padding-bottom 5%

.process__panel-header
    width 100%
    font-primary-regular-custom(44px)
    color #2E323A
    margin 50px auto
    line-height 44px
    text-transform uppercase
    text-align center
    letter-spacing 10px

.process__panel-sections
    width 100%
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-around
    align-items flex-start

.process__panel-section
    width 300px
    display flex
    flex-wrap wrap
    justify-content center

.process__panel-image
    width 100%
    height 100%

.process__panel-image-wrap
    width 70%
    height auto

.process__panel-title
    text-align center
    margin 10px auto
    color #2E323A
    font-primary-light-custom(22px)
    width 100%
    line-height 22px
    color #206F8B

.process__panel-description
    width 100%
    margin 10px auto
    font-primary-light-custom(14px)
    line-height 21px
    text-align center
    color #2E323A

.info__panel
    width 100%
    height 100vh
    overflow hidden
    background center
    background-attachment fixed
    display flex

.info__panel-content-sections
    width 100%
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-around
    align-items center

.info__panel-content-left
    display flex
    flex-wrap wrap
    justify-content center
    width 400px
    background rgba(34,34,34,0.50)

.info__panel-content-right
    display flex
    flex-wrap wrap
    justify-content center
    width 400px
    background rgba(34,34,34,0.50)

.info__panel-header
    font-primary-regular-custom(2.5em)
    line-height 44px
    letter-spacing 5.5px
    text-transform uppercase
    text-align center
    width 100%
    margin 4%
    color white
    text-shadow 0 0 2px black


.info__panel-subheader
    font-primary-ultra-light-custom(20px)
    line-height 20px
    text-align center
    color white
    text-shadow 0 0 3px gray

.info__panel-image
    width 60%
    height 40%
    margin 20% 20% 0% 20%
    background-position center
    background-repeat no-repeat
    background-size contain

.info__panel-content
    padding 10% 5%
    font-primary-light-custom(14px)
    color white

.info__panel-button
    margin 15% auto
    border 1px solid white
    font-primary-ultra-light-custom(30px)
    color white
    text-align center
    vertical-align middle
    width 50%
    padding 5%
    cursor pointer

.info__panel-button:hover
    background-color white
    color rgba(34,34,34,0.50)

.info__panel-button:active
    background-color rgba(34,34,34,0.50)
    color white

.partners__panel
    overflow hidden
    width 100%
    height 200px
    display flex
    align-items center

.logo__banner
    position relative
    width 100%
    height auto
    background-color white
    opacity: .8
    display flex
    justify-content space-around
    align-items center
    flex-wrap wrap
    row-direction column

.partner__panel-header
    font-primary-regular-custom(44px)
    color #2E323A
    line-height 100px
    letter-spacing 5.5px
    text-transform uppercase
    text-align center
    width 100%
    color black

.logo_item
    height 100px
    width 150px
    position relative
    background-position center
    background-repeat no-repeat
    background-size contain

.home__arrow
    position relative
    color white
    text-align center
    margin 0 auto
    cursor pointer
    top 80vh

.more__panel
    width 100%
    height 700px

.more__panel-content
    float left
    position relative
    width 50%
    height 100%
    background #F7F7F7
    background-size cover
    background-position 50% 0
    background-repeat no-repeat
    background-attachment scroll
    display flex
    justify-content space-around
    align-items center
    flex-wrap wrap
    row-direction row

.more__panel-header
    font-primary-ultra-light-custom(44px)
    line-height 44px
    letter-spacing 5.5px
    text-transform uppercase
    text-align left
    margin 80px 20% auto 20%
    width 70%
    color white
    text-shadow 0 0 10px black

.more__panel-subcontent
    height 50%
    width 100%

.more__panel-title
    font-primary-ultra-light-custom(30px)
    line-height 30px
    text-align left
    margin 80px 20% auto 10%
    width 70%
    color black

.more__panel-desc
    font-primary-regular-custom(14px)
    line-height 16px
    text-align left
    margin 40px 20% auto 10%
    color black
    width 70%

.more__panel-link
    cursor pointer
    color #4A90E2
    font-primary-regular-custom(14px)
    line-height 14px
    text-align left
    margin 25px 20% auto 10%

.hidden
    display none

.homepage-hero-module
    border-right none
    border-left none
    position relative
    height 100vh

.no-video .video-container video,
.touch .video-container video
    display none

.no-video .video-container .poster,
.touch .video-container .poster
    display block !important

.video-container
    position relative
    bottom 0%
    left 0%
    height 100%
    width 100%
    overflow hidden
    background #000
    .poster
        img
            width 100%
            bottom 0
            position absolute
    .filter
        z-index 100
        position absolute
        background rgba(0, 0, 0, 0.4)
        width 100%
    video
        position absolute
        z-index 0
        bottom 0
        &.fillWidth
            width 100%

@media screen and (max-width: 995px)
    #fill-in
        width 100%

@media screen and (max-width: 662px)
    #hidden
        display none
    #widen
        width 100%
    .partners__panel
        display none
    .more__panel-content
        width 100%
    .more__panel-title
        margin-top 50px
        margin-right 10%
    .more__panel-desc
        margin-right 10%
    .info__panel-header
        margin-right 10%
    .info__panel-subheader
        width 80%
        margin 40px 10% auto 10%

    .process__panel-sections
        flex-direction column
        justify-content center
        width 100%

    .process__panel-section
        justify-content center
        width 100%
        margin 20px auto

    .info__panel
        height auto

    .home__arrow
        top 60vh

    .home__panel
        display block

    .homepage-hero-module
        display none
