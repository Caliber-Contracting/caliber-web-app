.home-page
    background-color white
    overflow hidden

.home__panel
    height 700px
    width 100%
    background-repeat no-repeat
    background-position center
    background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) )
    background-size cover
    background-color white

.home__panel-header
    position relative
    width 100%
    font-primary-ultra-light-custom(44px)
    line-height 44px
    letter-spacing 11px
    text-transform uppercase
    text-align center
    top 35%
    color white

.home__panel-subheader
    position relative
    width 50%
    margin auto 25%
    line-height 23px
    text-align center
    font-style italic
    color white
    top 45%
    font-primary-medium-custom(20px)

.info__panel-content
    float left
    position relative
    width 50%
    height 100%
    background rgba(34,34,34,0.75)

.info__panel-header
    font-primary-ultra-light-custom(44px)
    line-height 44px
    letter-spacing 5.5px
    text-transform uppercase
    text-align left
    margin 80px 20% auto 10%
    width 70%
    color white
    text-shadow 0 0 2px black

.info__panel-subheader
    font-primary-regular-custom(20px)
    line-height 20px
    text-align left
    margin 40px 20% auto 10%
    color white
    text-shadow 0 0 3px gray
    width 70%

.info__panel-image
    width 60%
    height 40%
    margin 20% 20% 0% 20%
    background-position center
    background-repeat no-repeat
    background-size contain

.partners__panel
    width 100%
    height 250px

.logo__banner
    position relative
    width 100%
    height 150px
    background-color white
    opacity: .8
    display flex
    justify-content space-around
    align-items center
    flex-wrap wrap
    row-direction column


.partner__panel-header
    font-primary-ultra-light-custom(44px)
    line-height 100px
    letter-spacing 5.5px
    text-transform uppercase
    text-align center
    width 100%
    color black

.logo_item
    height 100px
    width 150px
    position relative
    background-position center
    background-repeat no-repeat
    background-size contain

.home__arrow
    position relative
    color white
    text-align center
    margin 0 auto
    top 70%
    cursor pointer
