.home-page
    background-color white

.home__panel
    position relative
    height 740px
    width 100%
    background-size cover
    background-repeat no-repeat
    background-position fixed

.home__panel-header
    position relative
    margin 0 auto
    top 35%
    text-align center
    font-primary-ultra-light-custom(72px)
    color white
    width 60%
    height 160px
    line-height 80px

.home__panel-subheader
    position relative
    margin 0 auto
    top 40%
    text-align center
    font-primary-medium-custom(14px)
    color white
    width 40%
    height 160px
    line-height 22px

.home__panel-button
    position relative
    height 40px
    width 160px
    top 35%
    margin auto
    text-align center
    transform translateY(-50%)
    color white
    font-primary-medium-custom(14px)
    background #F5821F
    border-radius 4px
    line-height 40px

.home__panel-arrow
    position relative
    top 37%
    margin auto
    text-align center
    color white

.home__sub-navbar
    width 100%
    height 33px
    line-height 33px
    font-primary-medium-custom(12px)
    border-top 1px solid #FFFFFF
    position absolute
    background-color transparent
    bottom 0
    right 0

.home__sub-navbar-placed
    border 1px solid #DDDDDD
    background-color white
    opacity .95
    color #2d3545
    font-primary-medium-base()

.nav-bar-top
    display block
    position fixed
    top 112px
    width 100%
    height 33px
    z-index 9999
    border 1px solid #DDD

.home-slider
   width 100%
   background-color background-gray
