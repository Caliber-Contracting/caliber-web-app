.about-page
    background-color black
    overflow hidden

.founder__panel
    height 800px
    width 100%
    overflow hidden

.founder__panel-header
    width 100%
    font-primary-ultra-light-custom(53px)
    color white
    margin 150px auto auto auto
    text-align center
    line-height 53px

.founder__panel-cards
    height 500px
    width 100%
    display flex
    justify-content space-around
    align-items center
    flex-wrap wrap
    row-direction column

.founder__panel-card
    margin 30px auto auto auto
    height 500px
    width 300px
    border-radius 6px
    background-color #24AAFA
    box-shadow 0px 0px 8px gray

.founder__panel-card__photo
    overflow hidden
    width 100%
    height 50%
    border-radius 6px 6px 0 0
    background-repeat no-repeat
    background-position center
    background-size cover

.founder__panel-card__content
    width 100%
    height 50%

.founder__panel-card-title
    font-primary-ultra-light-custom(30px)
    line-height: 30px
    text-align: center
    width center
    margin-top 15px
    color white

.founder__panel-card-position
    font-primary-medium-custom(20px)
    line-height: 20px
    text-align: center
    width center
    margin-top 15px
    color white

.founder__panel-card-description
    font-primary-regular-custom(14px)
    line-height 16px
    text-align justify
    width 100%
    margin 15px 10% auto 10%
    color white
    width 80%

.clip
    width 50px
    height 10px
    margin 10px auto
    background-color black
    border-radius 5px
    box-shadow inset 1px 1px 2px gray

.developer__panel
    overflow hidden
    height 800px
    width 100%
    background-color white

.developer__panel-header
    width 100%
    font-primary-ultra-light-custom(53px)
    color black
    margin 80px auto auto auto
    text-align center
    line-height 53px
